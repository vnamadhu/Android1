<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_windows_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.felight.myapp2.WindowsPhoneActivity"
    android:orientation="vertical">

    <Button
        android:onClick="LaunchActivity"
        android:id="@+id/btnAlgo"
        android:text="Algo"
        android:textSize="30dp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/newbuttonshape"

        />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:onClick="LaunchActivity"
        android:id="@+id/btnLifeCycle"
        android:layout_marginRight="10dp"
        android:text="ActivityLifeCycle"
        android:textSize="30dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/newbuttonshape"
         />
    <Button
        android:onClick="LaunchActivity"
        android:id="@+id/btnNavigator"
        android:text="Navigator"
        android:textSize="30dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/newbuttonshape"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:onClick="LaunchActivity"
        android:id="@+id/btnPassData"
        android:layout_marginRight="10dp"
        android:text="PassData"
        android:textSize="30dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonshape"
        />

    <Button
        android:onClick="LaunchActivity"
        android:id="@+id/btnConverter"
        android:text="CurrencyConverter"
        android:textSize="30dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonshape"
        />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:onClick="LaunchActivity"
        android:id="@+id/btnGreet"
        android:layout_marginRight="10dp"
        android:text="GreetUser"
        android:textSize="30dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/newbuttonshape"
        />

    <Button
        android:onClick="LaunchActivity"
        android:id="@+id/btnCalcu"
        android:text="Calculator"
        android:textSize="30dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/newbuttonshape"
        />
        </LinearLayout>


    <Button
        android:onClick="LaunchActivity"
        android:id="@+id/btnInsta"
        android:text="Instagram"
        android:textSize="30dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/newbuttonshape"
        android:layout_gravity="center"
        />


</LinearLayout>
