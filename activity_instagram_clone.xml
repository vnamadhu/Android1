<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_instagram_clone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >



    <ImageView

        app:srcCompat="@drawable/clone"
        android:id="@+id/ivResult"
        android:layout_width="380dp"
        android:layout_height="350dp" />
    <Button
        android:onClick="dispatchTakePictureIntent"
        android:text="Camera"
        android:id="@+id/btnCamera"
        android:layout_width="100dp"
        android:layout_height="40dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="7dp"
        android:layout_gravity="right"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="91dp">

            <ImageView
                android:onClick="doConversion"
                android:layout_height="100dp"
                app:srcCompat="@drawable/grayscale"
                android:id="@+id/ivGrayscale"
                android:layout_width="100dp" />

            <ImageView
                android:onClick="doConversion"
                android:layout_height="100dp"
                app:srcCompat="@drawable/clone"
                android:id="@+id/ivSophia"
                android:layout_width="100dp" />

            <ImageView
                android:onClick="doConversion"
                android:layout_height="100dp"
                app:srcCompat="@drawable/bluetint"
                android:id="@+id/ivBlue"
                android:layout_width="100dp" />

            <ImageView
                android:onClick="doConversion"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/greentint"
                android:id="@+id/ivGreen"/>
            <ImageView
                android:onClick="doConversion"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redtint"
                android:id="@+id/ivRed"
                android:layout_width="100dp" />
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
