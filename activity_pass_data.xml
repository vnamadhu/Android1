<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pass_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.felight.myapp2.PassDataActivity"
    android:orientation="vertical">


    <Button
        android:layout_marginTop="10dp"
        android:onClick="LaunchActivity"
        android:textColor="#6e1751"
        android:text="GoogleNews"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/btnGoogleNews"
        android:layout_gravity="center"/>

    <Button
        android:onClick="LaunchActivity"
        android:textColor="#6e1751"
        android:text="FelightNews"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/btnFelightNews"
        android:layout_gravity="center"/>

</LinearLayout>
